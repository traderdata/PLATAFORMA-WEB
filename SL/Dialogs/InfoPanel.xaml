<UserControl x:Class="Traderdata.Client.TerminalWEB.Dialogs.InfoPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="150" Background="Transparent">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Border Name="border" BorderBrush="Silver" BorderThickness="2" Opacity="1" Background="Black" CornerRadius="8" >
            <StackPanel Orientation="Vertical" >
                <TextBlock Name="txtDate" HorizontalAlignment="Center" Text="" Foreground="White" IsHitTestVisible="False"/>
                <TextBlock HorizontalAlignment="Left" Foreground="GreenYellow" Text="Preço Histórico" Margin="10,10,0,0" IsHitTestVisible="False"/>
                <StackPanel Orientation="Vertical" Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="stackItens" IsHitTestVisible="False">
                    
                </StackPanel>
            </StackPanel>
                
        </Border>
    </Grid>
</UserControl>
