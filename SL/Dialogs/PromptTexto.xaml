<controls:ChildWindow x:Class="Traderdata.Client.TerminalWEB.Dialogs.PromptTexto"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                       
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="700" Height="400" 
           Title="Comentario" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,12,0" VerticalAlignment="Bottom" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,91,0" VerticalAlignment="Bottom" />
        <TextBox HorizontalAlignment="Stretch" Margin="12,10,0,30" Name="txtNovoComentario"  VerticalAlignment="Stretch" AcceptsReturn="True" TabIndex="0" KeyDown="txtNovoComentario_KeyDown_1"/>

    </Grid>
</controls:ChildWindow>